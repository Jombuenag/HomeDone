<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.taku.homedone.Entrada"
    android:background="@drawable/entrada">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:id="@+id/btnVolver"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Cocina"
        android:id="@+id/btnCocina"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:width="125dp"
        android:background="@drawable/botones" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Salón"
        android:id="@+id/btnSalon"
        android:layout_alignBottom="@+id/btnCocina"
        android:layout_toEndOf="@+id/btnCocina"
        android:layout_marginStart="25dp"
        android:width="125dp"
        android:background="@drawable/botones" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Dormitorio"
        android:id="@+id/btnDormitorio"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:width="125dp"
        android:background="@drawable/botones" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Baño"
        android:id="@+id/btnBaño"
        android:layout_alignTop="@+id/btnDormitorio"
        android:layout_alignStart="@+id/btnSalon"
        android:width="125dp"
        android:background="@drawable/botones" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSaludo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
